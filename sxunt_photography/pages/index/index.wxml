  <!-- 卡片式（cards）轮播图 -->
  <view class="card-theme">
  <t-swiper
    current="{{current}}"
    autoplay="{{autoplay}}"
    duration="{{duration}}"
    interval="{{interval}}"
    bindchange="onChange"
    navigation="{{ { type: 'dots' } }}"
    list="{{swiperList2}}"
    image-props="{{ { shape: 'round' } }}"
    previousMargin="34px"
    nextMargin="34px"
    t-class-nav="card-theme-nav"
    height="400"
    pagination-position="bottom"
    bind:click="navToActivityDetail"
  />
</view>

