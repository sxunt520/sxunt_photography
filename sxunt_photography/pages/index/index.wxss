.container { padding: 20rpx; }
.carousel-img { width: 100%; height: 320rpx; border-radius: 10rpx; }
.marquee { background: #f5f5f5; padding: 10rpx 20rpx; color: #333; font-size: 26rpx; margin: 20rpx 0; }
.recommend-title { font-weight: bold; font-size: 32rpx; margin: 20rpx 0 10rpx; }
.recommend-list { display: flex; flex-wrap: wrap; gap: 18rpx; }
.recommend-item { width: 47%; margin-bottom: 20rpx; }
.recommend-item image { width: 100%; height: 220rpx; border-radius: 8rpx; }
.img-title { text-align: center; margin-top: 6rpx; font-size: 24rpx; }